<script>
// Selecionando o elemento com a classe "price--highlight" e obtendo o valor dele
const priceElement = document.querySelector('.price--highlight');
const price = parseFloat(priceElement.textContent.replace('R$', '').replace(',', '.'));

// Selecionando os elementos para exibir os valores calculados
const valEm1 = document.querySelector('#val-em1');
const valTotalEm1 = document.querySelector('#val-total-em1');

// Calculando o valor para 1x sem juros
const val1xSemJuros = price.toFixed(2);
const totalSemJuros = val1xSemJuros;
valEm1.textContent = val1xSemJuros;
valTotalEm1.textContent = totalSemJuros;

// Selecionando os elementos para exibir os valores calculados com juros
const valEm2 = document.querySelector('#val-em2');
const valTotalEm2 = document.querySelector('#val-total-em2');

// Calculando o valor para 2x com 5% de juros
const val2xSemJuros = (price * 1 / 2).toFixed(2);
const totalSemJuros2x = (price * 1).toFixed(2);
valEm2.textContent = val2xSemJuros;
valTotalEm2.textContent = totalSemJuros2x;

// Selecionando os elementos para exibir os valores calculados com juros
const valEm3 = document.querySelector('#val-em3');
const valTotalEm3 = document.querySelector('#val-total-em3');


const val3xSemJuros = (price * 1 / 3).toFixed(2);
const totalSemJuros3x = (price * 1 * 1 * 1).toFixed(2);
valEm3.textContent = val3xSemJuros;
valTotalEm3.textContent = totalSemJuros3x;

// Selecionando os elementos para exibir os valores calculados com juros
const valEm4 = document.querySelector('#val-em4');
const valTotalEm4 = document.querySelector('#val-total-em4');


const val4xSemJuros = (price * 1 / 4).toFixed(2);
const totalSemJuros4x = (price * 1 * 1 * 1 * 1).toFixed(2);
valEm4.textContent = val4xSemJuros;
valTotalEm4.textContent = totalSemJuros4x;       

// Selecionando os elementos para exibir os valores calculados com juros
const valEm5 = document.querySelector('#val-em5');
const valTotalEm5 = document.querySelector('#val-total-em5');

// Calculando o valor para 5x com 12.32% de juros
const interestRate5x = 1.1232;
const val5xComJuros = (price * interestRate5x / 5).toFixed(2);
const totalComJuros5x = (price * interestRate5x).toFixed(2);
valEm5.textContent = val5xComJuros;
valTotalEm5.textContent = totalComJuros5x;

// Selecionando os elementos para exibir os valores calculados com juros
const valEm6 = document.querySelector('#val-em6');
const valTotalEm6 = document.querySelector('#val-total-em6');

// Calculando o valor para 6x com 13.65% de juros
const interestRate6x = 1.1365;
const val6xComJuros = (price * interestRate6x / 6).toFixed(2);
const totalComJuros6x = (price * interestRate6x).toFixed(2);
valEm6.textContent = val6xComJuros;
valTotalEm6.textContent = totalComJuros6x;
      

// Selecionando os elementos para exibir os valores calculados com juros
const valEm7 = document.querySelector('#val-em7');
const valTotalEm7 = document.querySelector('#val-total-em7');

// Calculando o valor para 7x com 14,72% de juros
const interestRate7x = 1.1472;
const val7xComJuros = (price * interestRate7x / 7).toFixed(2);
const totalComJuros7x = (price * interestRate7x).toFixed(2);
valEm7.textContent = val7xComJuros;
valTotalEm7.textContent = totalComJuros7x;


// Selecionando os elementos para exibir os valores calculados com juros
const valEm8 = document.querySelector('#val-em8');
const valTotalEm8 = document.querySelector('#val-total-em8');

// Calculando o valor para 8x com 16,23% de juros
const interestRate8x = 1.1623;
const val8xComJuros = (price * interestRate8x / 8).toFixed(2);
const totalComJuros8x = (price * interestRate8x).toFixed(2);
valEm8.textContent = val8xComJuros;
valTotalEm8.textContent = totalComJuros8x;      
      
      
// Selecionando os elementos para exibir os valores calculados com juros
const valEm9 = document.querySelector('#val-em9');
const valTotalEm9 = document.querySelector('#val-total-em9');

// Calculando o valor para 9x com 17,71% de juros
const interestRate9x = 1.1771;
const val9xComJuros = (price * interestRate9x / 9).toFixed(2);
const totalComJuros9x = (price * interestRate9x).toFixed(2);
valEm9.textContent = val9xComJuros;
valTotalEm9.textContent = totalComJuros9x;       


// Selecionando os elementos para exibir os valores calculados com juros
const valEm10 = document.querySelector('#val-em10');
const valTotalEm10 = document.querySelector('#val-total-em10');

// Calculando o valor para 10x com 17,71% de juros
const interestRate10x = 1.2491;
const val10xComJuros = (price * interestRate10x / 10).toFixed(2);
const totalComJuros10x = (price * interestRate10x).toFixed(2);
valEm10.textContent = val10xComJuros;
valTotalEm10.textContent = totalComJuros10x;     


// Selecionando os elementos para exibir os valores calculados com juros
const valEm11 = document.querySelector('#val-em11');
const valTotalEm11 = document.querySelector('#val-total-em11');

// Calculando o valor para 11x com 17,71% de juros
const interestRate11x = 1.2011;
const val11xComJuros = (price * interestRate11x / 11).toFixed(2);
const totalComJuros11x = (price * interestRate11x).toFixed(2);
valEm11.textContent = val11xComJuros;
valTotalEm11.textContent = totalComJuros11x;     


// Selecionando os elementos para exibir os valores calculados com juros
const valEm12 = document.querySelector('#val-em12');
const valTotalEm12 = document.querySelector('#val-total-em12');

// Calculando o valor para 12x com 17,71% de juros
const interestRate12x = 1.2162;
const val12xComJuros = (price * interestRate12x / 12).toFixed(2);
const totalComJuros12x = (price * interestRate12x).toFixed(2);
valEm12.textContent = val12xComJuros;
valTotalEm12.textContent = totalComJuros12x;          
 
// Selecionando o elemento para exibir o valor calculado com desconto
const pixdesconto = document.querySelector('#pixdesconto');


      
// Calculando o valor com desconto de 5% PIX
const valComDesconto = (price * 0.95).toFixed(2);
pixdesconto.textContent = valComDesconto;
      
      
      </script>


      

      
<script>
  var maisFormasPagamento = document.getElementById("modal-content-cartao");
  var modal = document.getElementById("modal");
  var modalBackground = modal.querySelector(".modal-background");


      
  maisFormasPagamento.addEventListener("click", function() {
modal.style.display = "block";
document.body.classList.add("dark-background"); // adiciona a classe para escurecer o fundo do body
});

modalBackground.addEventListener("click", function(event) {
if (event.target === modalBackground) {
modal.style.display = "none";
document.body.classList.remove("dark-background"); // remove a classe para clarear o fundo do body
}
});  
</script> 



<script>
  const modalCardIcon = document.querySelector('#modalcardicon');
  const modalBoletoIcon = document.querySelector('#modalboletoicon');
  const modalPixIcon = document.querySelector('#modalpixicon');
  
  const modalContentCard = document.querySelector('#modal-content-card');
  const modalContentBoleto = document.querySelector('#modal-content-boleto');
  const modalContentPix = document.querySelector('#modal-content-pix');

  modalCardIcon.addEventListener('click', () => {
    if (modalContentCard.style.display !== 'block') {
      modalContentBoleto.style.display = 'none';
      modalContentPix.style.display = 'none';
      modalContentCard.style.display = 'block';
    }
  });

  modalBoletoIcon.addEventListener('click', () => {
    if (modalContentBoleto.style.display !== 'block') {
      modalContentCard.style.display = 'none';
      modalContentPix.style.display = 'none';
      modalContentBoleto.style.display = 'block';
    }
  });

  modalPixIcon.addEventListener('click', () => {
    if (modalContentPix.style.display !== 'block') {
      modalContentCard.style.display = 'none';
      modalContentBoleto.style.display = 'none';
      modalContentPix.style.display = 'block';
    }
  });
  
  document.addEventListener('DOMContentLoaded', () => {
    // aqui vai o c√≥digo que deve ser executado ap√≥s a p√°gina ter sido carregada
  });
</script>


 


      
