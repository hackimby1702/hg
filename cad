<script>
const cardIcon = document.getElementById("modalcardicon");
const boletoIcon = document.getElementById("modalboletoicon");
const pixIcon = document.getElementById("modalpixicon");

const cardModal = document.getElementById("modal-content-cartao");
const boletoModal = document.getElementById("modal-content-boleto");
const pixModal = document.getElementById("modal-content-pix");

cardIcon.addEventListener("click", () => {
  cardModal.style.display = "block";
  boletoModal.style.display = "none";
  pixModal.style.display = "none";
});

boletoIcon.addEventListener("click", () => {
  cardModal.style.display = "none";
  boletoModal.style.display = "block";
  pixModal.style.display = "none";
});

pixIcon.addEventListener("click", () => {
  cardModal.style.display = "none";
  boletoModal.style.display = "none";
  pixModal.style.display = "block";
});
</script>
 </div>
      
       
      


